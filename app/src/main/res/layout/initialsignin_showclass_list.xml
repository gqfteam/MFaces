<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/initialsignin_showclass_title_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/two_margin_item"
        android:paddingTop="@dimen/two_margin_item"
        android:paddingLeft="@dimen/four_margin_item"
        android:paddingRight="@dimen/four_margin_item"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/xiala"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/initialsignin_showclass_titlesclassname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班级"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/initialsignin_showclass_titlestudentnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人数"
            />
        <TextView
            android:id="@+id/initialsignin_showclass_titlecheckornot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否选择"
            android:layout_marginLeft="@dimen/four_margin_item"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/initialsignin_showclass_substance_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/two_margin_item"
        android:paddingTop="@dimen/two_margin_item"
        android:paddingLeft="@dimen/four_margin_item"
        android:paddingRight="@dimen/four_margin_item"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/initialsignin_showclass_xialapic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/xiala"
            />
        <TextView
            android:id="@+id/initialsignin_showclass_classname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="软工132班"
            android:layout_marginLeft="@dimen/one_margin_item"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/initialsignin_showclass_studentnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35人"
            android:layout_marginRight="@dimen/two_margin_item"
            />

        <CheckBox
            android:id="@+id/initialsignin_showclass_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/four_margin_item"
            android:layout_marginRight="@dimen/two_margin_item"
            />
    </LinearLayout>
</LinearLayout>
